<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nYour Investment Calculator\n\n"
        android:fontFamily="@font/fbi"
        android:layout_margin="50dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#004879"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/fbi"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your credit score: "
            android:fontFamily="@font/fbi"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/creditscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16dp"
            android:hint="credit score"
            android:fontFamily="@font/fbi"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >


        <TextView
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:text="Enter your average\nmonthly expenditure:  "
            android:fontFamily="@font/fbi"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/averageexpenditure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:hint="monthly expenditure"
            android:fontFamily="@font/fbi"
            android:layout_marginLeft="-65dp"
            android:inputType="numberDecimal"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your monthly \nnet income:  \n\n\n"
            android:fontFamily="@font/fbi"


            android:textSize="18dp" />


        <EditText
            android:id="@+id/monthlyincome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:hint="monthly income"
            android:fontFamily="@font/fbi"
            android:inputType="numberDecimal"
            android:textSize="16dp" />
    </LinearLayout>








    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickClear"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:backgroundTint="#D22E1E"
        android:textSize="20dp"
        android:fontFamily="@font/fbi"
        android:text="Clear" />


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickNext"
        android:text="Next"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#D22E1E"
        android:fontFamily="@font/fbi"


        />








</LinearLayout>
